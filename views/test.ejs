        .footer {
   position:fixed;
   bottom:0;
   width:100%;
   height:60px;   /* Height of the footer */
  
}

.draggable { width: 200px; border: 1px solid rgba(0,0,0,0.1); text-align: left; padding: 0.3em; cursor: move; margin: 5px;}
  #draggable { width: 200px; border: 1px solid rgba(0,0,0,0.1); text-align: left; padding: 0.3em; cursor: move; margin: 5px;}
  #droppable { width: 150px; height: 150px; padding: 0.5em; float: left; margin: 10px; }
  .title {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    text-align: left;
    color: rgba(0,0,0,0.25);
    font-size: 20px;
    line-height: 40px;
    margin-top: -10px;
    transition: all .2s;
}
    </style>


</head>

<body>
<div class="wrapper">
<h1><span id="htitle" class="htitle">(GoFlow)</span></h1>
    <div class="container clearfix">
        <div class="main">
        <% for(var i=0; i < dev.length; i++) { %>
  
   <div  class='drag draggable' name="<%= dev[i].id %>">
  <!-- <p><%= dev[i].name  %></p>-->
   <%if (dev[i].template == 'switch'){ %> 
      <p><img src="/img/lightbulb-on-outline.png" height=24 width=24><%= dev[i].name  %></p>
  <% } else if (dev[i].template == 'dimmer'){ %>
      <p><img src="/img/toggle-switch.png" height=24 width=24><%= dev[i].name  %></p>
   <% } else { %>
      <p><img src="/img/battery-unknown.png" height=24 width=24><%= dev[i].name  %></p>
   <% } %>
  
   </div>
    <% } %>
        </div>

        <div class="sidebar">
        <div id="if" class="col-xs-6 col-sm-3 if" style="border-right: 1px solid rgba(0,0,0,0.1);">
  <span class="title">If....</span><br><br>
