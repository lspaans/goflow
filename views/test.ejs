    @font-face {
  font-family: 'Tangerine';
  font-style: normal;
  font-weight: normal;
  src: local('Tangerine'), url('/fonts/ShorelinesScriptBold.otf') format('truetype');
}
.htitle {
  font-family: 'Tangerine', serif;
  }

        .main,
        .sidebar,
        .3de,
        .het {
            float: none;
            padding: 20px;
            vertical-align: top;
        }
        
        .container {
            display: table;
        }
        
        .main {
           
          
            display: table-cell;
        }
        
        .sidebar {
           border-right: 1px solid rgba(0,0,0,0.1); 
            display: table-cell;
            
